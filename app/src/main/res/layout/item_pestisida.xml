<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Merek Dagang"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/tv_merek_dagang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acanto 250"
                android:textColor="@android:color/black"
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bahan Aktif"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/tv_bahan_aktif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pikositrobin"
                android:textColor="@android:color/black" />


            <LinearLayout
                android:layout_marginTop="4dp"
                android:padding="2dp"
                android:background="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:gravity="center_horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kode Cara Kerja" />

                    <TextView
                        android:id="@+id/tv_kode_kerja"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11"
                        android:textColor="@color/white" />


                </LinearLayout>

                <LinearLayout
                    android:gravity="center_horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView

                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tingkat Bahaya" />

                    <TextView
                        android:id="@+id/tv_tingkat_bahaya"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="II"
                        android:textColor="@color/white" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>